<div class="navigation" n:if="!empty($items) || ($showSignOutLink && $administration->hasSignOutLink())">
	<div class="navigation__inner">
		{foreach $items as $item}
			{var $page = $item[page]}
			{var $link = $item[link]}
			<a n:if="$link !== NULL" href="{$linkGenerator->getUrl($link)}" n:class="navigation__item, $item[active] ? 'navigation__item--active', $item[level] > 0 ? ('navigation__item--level-' . $item['level'])">{$page->getLabel()}</a>
			<span n:if="$link === NULL" n:class="navigation__item, navigation__item--disabled, $item[level] > 0 ? ('navigation__item--level-' . $item['level'])">{$page->getLabel()}</span>
		{/foreach}
